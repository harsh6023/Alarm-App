<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KumAseGetUpDo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_700</item>
        <!-- Customize your theme here. -->
    </style>

    <!--EditText Text Style-->
    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textColorHint">@color/edit_text_hint_text_color</item>
        <item name="android:textColor">@color/edit_text_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:background">@drawable/bg_main_gradient_border</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableTint">@color/edit_text_text_color</item>
    </style>

    <!--Smaller Text Style-->
    <style name="SmallerTextStyle">
        <!--<item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:drawableTint">@color/white_100</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--Smaller Text Style without marquee-->
    <style name="SmallerTextStyle2">
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:drawableTint">@color/white_100</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--Smallest Text Style-->
    <style name="SmallestTextStyle">
        <!--<item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">@dimen/smallest_text_size</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:drawableTint">@color/white_100</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>